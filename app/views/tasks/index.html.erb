
<h1>Task Manager</h1>

<% @tasks.each do |task| %>
  <div class="task">
    <h2><%= link_to task.title, task_path(task) %></h2>
    <% if task.completed %>
      <p>Task Completed</p>
    <% else %>
      <p>Task Pending</p>
    <% end %>
    <%= link_to "Delete", task_path(task),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
<% end %>

<%= link_to "New Task", new_task_path %>
